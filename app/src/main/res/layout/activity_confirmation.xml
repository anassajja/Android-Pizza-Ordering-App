<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Order Confirmation Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Confirmed!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Confirmation Icon (e.g., checkmark) -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_circle_24"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        app:tint="@color/primaryColor" />

    <!-- Order Confirmation Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for your order."
        android:textSize="18sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Payment Information -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment will be collected upon delivery."
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Order Details Section (Optional) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_bg"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: 123-456-7890"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 123 Boulevard Anfa, Casablanca, Morocco"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method: Cash on Delivery"
            android:textSize="16sp"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- Button to go back to Home or Continue Shopping -->
    <Button
        android:id="@+id/continueShoppingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Shopping"
        android:textAllCaps="false"
        android:background="@color/primaryColor"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_gravity="center" />
</LinearLayout>
